@using PONTODIGITAL.Models;
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <header>
        <nav class="menu">
            <ul>
                <li><a href='@Url.Action("Index", "Home")'>Home</a></li>
                <li><a href="#Listar">Listar Usu√°rios</a></li>
                <li><a href="#Comentario">Aprovar Comentarios</a></li>
            </ul>
        </nav>
    </header>
    <main>

        <div class="container" id="Listar">
            <h2>Lista De Usuarios</h2>
            <table class="table table-striped table-dark">
                <thead class = "thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">E-Mail</th>
                        <th scope="col">Senha</th>
                        <th scope="col">Data de Nascimento</th>
                    </tr>
                </thead>                        
                <tbody>
                    @foreach (var item in ViewData["usuarios"] as List<Cadastro>)
                    {
                    <tr>
                        <td scope="row"><strong>@item.Id</strong></td>
                        <td scope="row">@item.Nome</td>
                        <td scope="row">@item.Email</td>
                        <td scope="row">@item.Senha</td>
                        <td scope="row">@item.DataNascimento.ToShortDateString()</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div> 

        <div id="Comentario">
            <section class="perguntas">
                <div>
                    <table class="table table-dark">
                    <thead>
                        <tr>
                        <th scope="col">Comentario</th>
                        <th scope="col">Aprovar / Reprovar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                        <th scope="row">1</th>
                            @foreach (var item in ViewData["coment"] as List<Faq>)
                            {
                            <tr>
                                <td scope="row"><strong>@item.Comentario</strong></td>
                                <a href = "" class="btn btn-warning">Editar</a>
                                <a href = "#" class="btn btn-danger">Excluir</a>
                            </tr>
                            }
                    </tbody>
                    </table>             
                </div>
            </section>
        </div>


    </main>
</body>